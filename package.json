{
  "name": "everybot",
  "version": "0.1.0",
  "description": "Moltbot-Lite: Windows-first AI assistant with Web + Mail, workspace files, memory, and scheduled tasks",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "node --import tsx src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@10.0.0",
  "dependencies": {
    "croner": "^9.1.0",
    "dotenv": "^16.4.5",
    "imapflow": "^1.0.200",
    "mailparser": "^3.6.6",
    "nodemailer": "^6.9.16",
    "pino": "^9.5.0"
  },
  "devDependencies": {
    "@types/nodemailer": "^6.4.16",
    "@eslint/js": "^9.15.0",
    "@types/node": "^22.10.0",
    "eslint": "^9.15.0",
    "prettier": "^3.3.3",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.15.0",
    "vitest": "^2.1.6"
  }
}
